local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer.PlayerGui
screenGui.Name = "AimbotUI"

local frame = Instance.new("Frame")
frame.Parent = screenGui
frame.BackgroundColor3 = Color3.new(0.1, 0.1, 0.1)
frame.BorderSizePixel = 0
frame.Position = UDim2.new(0.5, -100, 0.1, 0)
frame.Size = UDim2.new(0, 200, 0, 50)
frame.Draggable = true
frame.Selectable = true

local toggleButton = Instance.new("TextButton")
toggleButton.Parent = frame
toggleButton.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
toggleButton.TextColor3 = Color3.new(1, 1, 1)
toggleButton.Text = "Etkin"
toggleButton.TextSize = 16
toggleButton.Position = UDim2.new(0.5, -50, 0.2, 0)
toggleButton.Size = UDim2.new(0, 100, 0, 25)
toggleButton.Font = Enum.Font.GothamSemibold

local indicator = Instance.new("Frame")
indicator.Parent = frame
indicator.BackgroundColor3 = Color3.new(0, 1, 0) -- Yeşil
indicator.BorderSizePixel = 0
indicator.Position = UDim2.new(0.5, -40, 0.6, 0)
indicator.Size = UDim2.new(0, 10, 0, 10)
indicator.Visible = false

local aimbotEnabled = false
local target = nil
local aimbotSpeed = 15000 -- 5 kat daha hızlı
local aimbotRange = 100
local predictionFactor = 5 -- 5 kat daha iyi tahmin

local function aimAtTarget(target)
    local player = game.Players.LocalPlayer
    local camera = workspace.CurrentCamera
    local targetPos = target.Head.Position
    local targetVelocity = target.Character.Humanoid.MoveDirection * target.Character.Humanoid.WalkSpeed
    local predictedPos = targetPos + targetVelocity * predictionFactor
    camera.CFrame = camera.CFrame:lerp(camera.CFrame.lookAt(predictedPos).CFrame, aimbotSpeed / 1000)
end

local function findTarget()
    local player = game.Players.LocalPlayer
    local character = player.Character
    local closestTarget = nil
    local closestDistance = math.huge
    for _, v in pairs(game.Players:GetPlayers()) do
        if v ~= player and v.Character and v.Character:FindFirstChild("Head") and v.Team ~= player.Team then
            local distance = (v.Character.Head.Position - character.Head.Position).magnitude
            if distance < closestDistance and distance <= aimbotRange then
                closestDistance = distance
                closestTarget = v
            end
        end
    end
    return closestTarget
end

toggleButton.MouseButton1Click:Connect(function()
    aimbotEnabled = not aimbotEnabled
    toggleButton.Text = aimbotEnabled and "Devre Dışı" or "Etkin"
    indicator.Visible = aimbotEnabled
    indicator.BackgroundColor3 = aimbotEnabled and Color3.new(0, 1, 0) or Color3.new(1, 0, 0)
end)

while true do
    if aimbotEnabled then
        if target then
            aimAtTarget(target)
        else
            target = findTarget()
        end
    end
    wait(0.01)
end
