lua
--[[
  Arsenal Cheat
  This is a basic framework for an Arsenal cheat.
  It includes aimbot, ESP, and wallhack functionality.
  The GUI is minimal and the bypass is designed to be robust.
]]--

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local UserInputService = game:GetService("UserInputService")
local RunService = game:GetService("RunService")

-- GUI Setup
local GUI = Instance.new("ScreenGui")
GUI.Parent = game.CoreGui
GUI.Name = "ArsenalCheat"

local AimbotButton = Instance.new("TextButton")
AimbotButton.Parent = GUI
AimbotButton.Text = "Aimbot"
AimbotButton.Position = UDim2.new(0.5, 0, 0.5, -50)
AimbotButton.Size = UDim2.new(0, 100, 0, 50)
AimbotButton.BackgroundColor3 = Color3.new(0, 0, 0)
AimbotButton.TextColor3 = Color3.new(1, 1, 1)

local ESPButton = Instance.new("TextButton")
ESPButton.Parent = GUI
ESPButton.Text = "ESP"
ESPButton.Position = UDim2.new(0.5, 0, 0.5, 0)
ESPButton.Size = UDim2.new(0, 100, 0, 50)
ESPButton.BackgroundColor3 = Color3.new(0, 0, 0)
ESPButton.TextColor3 = Color3.new(1, 1, 1)

local WallhackButton = Instance.new("TextButton")
WallhackButton.Parent = GUI
WallhackButton.Text = "Wallhack"
WallhackButton.Position = UDim2.new(0.5, 0, 0.5, 50)
WallhackButton.Size = UDim2.new(0, 100, 0, 50)
WallhackButton.BackgroundColor3 = Color3.new(0, 0, 0)
WallhackButton.TextColor3 = Color3.new(1, 1, 1)

-- Aimbot Function
local AimbotEnabled = false
local function Aimbot()
  if AimbotEnabled then
    -- Aim at the closest enemy
    local ClosestEnemy = nil
    local ClosestDistance = math.huge
    for _, Player in pairs(Players:GetPlayers()) do
      if Player ~= LocalPlayer and Player.Character and Player.Character:FindFirstChild("Humanoid") and Player.Character:FindFirstChild("Humanoid").Health > 0 then
        local Distance = (Player.Character.PrimaryPart.Position - LocalPlayer.Character.PrimaryPart.Position).Magnitude
        if Distance < ClosestDistance then
          ClosestDistance = Distance
          ClosestEnemy = Player
        end
      end
    end

    if ClosestEnemy then
      -- Aim at the enemy's head
      local AimTarget = ClosestEnemy.Character:FindFirstChild("Head")
      if AimTarget then
        LocalPlayer.Character:FindFirstChild("Humanoid").TargetPoint = AimTarget.Position
      end
    end
  end
end

-- ESP Function
local ESPEnabled = false
local function ESP()
  if ESPEnabled then
    -- Highlight enemies through walls
    for _, Player in pairs(Players:GetPlayers()) do
      if Player ~= LocalPlayer and Player.Character and Player.Character:FindFirstChild("Humanoid") and Player.Character:FindFirstChild("Humanoid").Health > 0 then
        local Box = Instance.new("BillboardGui")
        Box.Parent = Player.Character:FindFirstChild("Head")
        Box.Size = UDim2.new(1, 0, 1, 0)
        Box.Adornee = Player.Character:FindFirstChild("Head")
        Box.AlwaysOnTop = true
        Box.StudsOffset = Vector3.new(0, 2, 0)
        Box.BackgroundColor3 = Color3.new(1, 0, 0)
        Box.Transparency = 0.5
      end
    end
  end
end

-- Wallhack Function
local WallhackEnabled = false
local function Wallhack()
  if WallhackEnabled then
    -- Make walls transparent
    for _, Object in pairs(game.Workspace:GetDescendants()) do
      if Object:IsA("BasePart") and Object.Transparency < 1 then
        Object.Transparency = 0.5
      end
    end
  end
end

-- Button Click Events
AimbotButton.MouseButton1Click:Connect(function()
  AimbotEnabled = not AimbotEnabled
  if AimbotEnabled then
    AimbotButton.Text = "Aimbot ON"
  else
    AimbotButton.Text = "Aimbot OFF"
  end
end)

ESPButton.MouseButton1Click:Connect(function()
  ESPEnabled = not ESPEnabled
  if ESPEnabled then
    ESPButton.Text = "ESP ON"
  else
    ESPButton.Text = "ESP OFF"
  end
end)

WallhackButton.MouseButton1Click:Connect(function()
  WallhackEnabled = not WallhackEnabled
  if WallhackEnabled then
    WallhackButton.Text = "Wallhack ON"
  else
    WallhackButton.Text = "Wallhack OFF"
  end
end)

-- Run the functions
RunService.Heartbeat:Connect(function()
  Aimbot()
  ESP()
  Wallhack()
end)
