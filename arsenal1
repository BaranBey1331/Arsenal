-- Aimbot Arayüzü
local AimbotFrame = Instance.new("Frame")
AimbotFrame.Name = "AimbotFrame"
AimbotFrame.Parent = game.CoreGui
--game.CoreGui.Enabled = true -- CoreGui'yi etkinleştiriyoruz (Kaldırıldı)
AimbotFrame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
AimbotFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
AimbotFrame.Size = UDim2.new(0, 200, 0, 150)
AimbotFrame.CornerRadius = 10 -- CornerRadius sadece bir sayı olmalı

local TargetName = Instance.new("TextLabel")
TargetName.Name = "TargetName"
TargetName.Parent = AimbotFrame
TargetName.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
TargetName.TextColor3 = Color3.fromRGB(255, 255, 255)
TargetName.Text = "Hedef Yok"
TargetName.Font = Enum.Font.SourceSans
TargetName.TextSize = 14
TargetName.Position = UDim2.new(0, 10, 0, 10)
TargetName.Size = UDim2.new(0, 180, 0, 20)

local AimRangeSlider = Instance.new("Slider")
AimRangeSlider.Name = "AimRangeSlider"
AimRangeSlider.Parent = AimbotFrame
AimRangeSlider.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
AimRangeSlider.ThumbColor3 = Color3.fromRGB(255, 0, 0)
AimRangeSlider.Position = UDim2.new(0, 10, 0, 40)
AimRangeSlider.Size = UDim2.new(0, 180, 0, 20)
AimRangeSlider.MinValue = 100
AimRangeSlider.MaxValue = 1000
AimRangeSlider.Value = 200 -- Başlangıç değeri değiştirildi

local AimRangeLabel = Instance.new("TextLabel")
AimRangeLabel.Name = "AimRangeLabel"
AimRangeLabel.Parent = AimbotFrame
AimRangeLabel.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
AimRangeLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
AimRangeLabel.Text = "Hedef Aralığı: " .. tostring(AimRangeSlider.Value) -- Başlangıçta güncellendi
AimRangeLabel.Font = Enum.Font.SourceSans
AimRangeLabel.TextSize = 14
AimRangeLabel.Position = UDim2.new(0, 10, 0, 70)
AimRangeLabel.Size = UDim2.new(0, 180, 0, 20)

local AimbotToggle = Instance.new("TextButton")
AimbotToggle.Name = "AimbotToggle"
AimbotToggle.Parent = AimbotFrame
AimbotToggle.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
AimbotToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
AimbotToggle.Text = "Aimbot Etkin"
AimbotToggle.Font = Enum.Font.SourceSans
AimbotToggle.TextSize = 14
AimbotToggle.Position = UDim2.new(0, 10, 0, 100)
AimbotToggle.Size = UDim2.new(0, 180, 0, 20)

local AimbotEnabled = false

AimbotToggle.MouseButton1Click:Connect(function()
    AimbotEnabled = not AimbotEnabled
    if AimbotEnabled then
        AimbotToggle.Text = "Aimbot Etkin"
    else
        AimbotToggle.Text = "Aimbot Devre Dışı"
    end
end)

local Player = game.Players.LocalPlayer
local Character = Player.Character or Player.CharacterAdded:Wait()
local Humanoid = Character:WaitForChild("Humanoid")
local RootPart = Character:WaitForChild("HumanoidRootPart")

local function FindTarget()
    local ClosestTarget = nil
    local ClosestDistance = math.huge

    for _, otherPlayer in ipairs(game.Players:GetPlayers()) do
        if Player ~= otherPlayer and otherPlayer.Team ~= Player.Team then -- Sadece düşmanları hedefle
            local otherCharacter = otherPlayer.Character or otherPlayer.CharacterAdded:Wait()
            if otherCharacter then
                local otherRootPart = otherCharacter:WaitForChild("HumanoidRootPart")
                if otherRootPart then
                    local distance = (RootPart.Position - otherRootPart.Position).Magnitude
                    if distance < ClosestDistance and distance <= AimRangeSlider.Value then
                        ClosestTarget = otherRootPart
                        ClosestDistance = distance
                    end
                end
            end
        end
    end

    return ClosestTarget
end

local function AimAtHead(target)
    local targetHead = target:FindFirstChild("Head") -- Head parçacığını arıyor
    if targetHead then
        local targetHeadCFrame = targetHead.CFrame
        local smoothFactor = 0.1
        RootPart.CFrame = RootPart.CFrame:lerp(targetHeadCFrame, smoothFactor)
    end
end

-- AutoFire fonksiyonu kaldırıldı

game:GetService("RunService").Heartbeat:Connect(function()
    if AimbotEnabled then
        local target = FindTarget()
        if target then
            TargetName.Text = "Hedef: " .. target.Parent.Name
            AimAtHead(target)
            -- AutoFire() -- Otomatik ateş özelliği (Kaldırıldı)
        else
            TargetName.Text = "Hedef Yok"
        end
    end
end)

AimRangeSlider.Changed:Connect(function()
    AimRangeLabel.Text = "Hedef Aralığı: " .. tostring(AimRangeSlider.Value)
end)
