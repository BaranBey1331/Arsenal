local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer.PlayerGui
screenGui.Name = "AimbotUI"

local frame = Instance.new("Frame")
frame.Parent = screenGui
frame.BackgroundColor3 = Color3.new(0, 0, 0)
frame.BorderSizePixel = 0
frame.Position = UDim2.new(0.5, -100, 0.5, -50)
frame.Size = UDim2.new(0, 200, 0, 100)
frame.Draggable = true
frame.Selectable = true

local label = Instance.new("TextLabel")
label.Parent = frame
label.BackgroundColor3 = Color3.new(0, 0, 0)
label.TextColor3 = Color3.new(1, 1, 1)
label.Text = "Aimbot"
label.TextSize = 16
label.Position = UDim2.new(0.5, -50, 0, 10)
label.Size = UDim2.new(0, 100, 0, 20)

local toggleButton = Instance.new("TextButton")
toggleButton.Parent = frame
toggleButton.BackgroundColor3 = Color3.new(0, 0, 0)
toggleButton.TextColor3 = Color3.new(1, 1, 1)
toggleButton.Text = "Etkin"
toggleButton.TextSize = 16
toggleButton.Position = UDim2.new(0.5, -50, 0, 40)
toggleButton.Size = UDim2.new(0, 100, 0, 20)

local indicator = Instance.new("Frame")
indicator.Parent = screenGui
indicator.BackgroundColor3 = Color3.new(1, 0, 0)
indicator.BorderSizePixel = 0
indicator.Position = UDim2.new(0.5, -5, 0.9, -5)
indicator.Size = UDim2.new(0, 10, 0, 10)
indicator.Visible = false

local aimbotEnabled = false
local target = nil
local aimbotSpeed = 5000
local aimbotRange = 100
local predictionFactor = 0.5

local function aimAtTarget(target)
    local player = game.Players.LocalPlayer
    local camera = workspace.CurrentCamera
    local targetPos = target.Head.Position
    local targetVelocity = target.Character.Humanoid.MoveDirection * target.Character.Humanoid.WalkSpeed
    local predictedPos = targetPos + targetVelocity * predictionFactor
    local lookVector = (predictedPos - camera.CFrame.Position).unit
    camera.CFrame = camera.CFrame:lerp(camera.CFrame.lookAt(camera.CFrame.Position, predictedPos).CFrame, aimbotSpeed / 1000)
end

local function findTarget()
    local player = game.Players.LocalPlayer
    local character = player.Character
    local closestTarget = nil
    local closestDistance = math.huge
    for _, v in pairs(game.Players:GetPlayers()) do
        if v ~= player and v.Character and v.Character:FindFirstChild("Head") and v.Team ~= player.Team then
            local distance = (v.Character.Head.Position - character.Head.Position).magnitude
            if distance < closestDistance and distance <= aimbotRange then
                closestDistance = distance
                closestTarget = v
            end
        end
    end
    return closestTarget
end

toggleButton.MouseButton1Click:Connect(function()
    aimbotEnabled = not aimbotEnabled
    toggleButton.Text = aimbotEnabled and "Devre Dışı" or "Etkin"
    indicator.Visible = aimbotEnabled
end)

while true do
    if aimbotEnabled then
        if target then
            aimAtTarget(target)
        else
            target = findTarget()
        end
    end
    wait(0.01)
end
