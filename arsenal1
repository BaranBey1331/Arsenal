-- Aimbot Arayüzü
local AimbotFrame = Instance.new("Frame")
AimbotFrame.Name = "AimbotFrame"
AimbotFrame.Parent = game.CoreGui
AimbotFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
AimbotFrame.Position = UDim2.new(0.5, -100, 0.5, -100)
AimbotFrame.Size = UDim2.new(0, 200, 0, 150)
AimbotFrame.CornerRadius = UDim.new(0, 10)

local TargetName = Instance.new("TextLabel")
TargetName.Name = "TargetName"
TargetName.Parent = AimbotFrame
TargetName.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
TargetName.TextColor3 = Color3.fromRGB(255, 255, 255)
TargetName.Text = "Hedef Yok"
TargetName.Font = Enum.Font.SourceSans
TargetName.TextSize = 14
TargetName.Position = UDim2.new(0, 10, 0, 10)
TargetName.Size = UDim2.new(0, 180, 0, 20)

local AimRangeSlider = Instance.new("Slider")
AimRangeSlider.Name = "AimRangeSlider"
AimRangeSlider.Parent = AimbotFrame
AimRangeSlider.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
AimRangeSlider.ThumbColor3 = Color3.fromRGB(255, 0, 0)
AimRangeSlider.Position = UDim2.new(0, 10, 0, 40)
AimRangeSlider.Size = UDim2.new(0, 180, 0, 20)
AimRangeSlider.MinValue = 100
AimRangeSlider.MaxValue = 1000
AimRangeSlider.Value = 600

local AimRangeLabel = Instance.new("TextLabel")
AimRangeLabel.Name = "AimRangeLabel"
AimRangeLabel.Parent = AimbotFrame
AimRangeLabel.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
AimRangeLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
AimRangeLabel.Text = "Hedef Aralığı: " .. AimRangeSlider.Value
AimRangeLabel.Font = Enum.Font.SourceSans
AimRangeLabel.TextSize = 12
AimRangeLabel.Position = UDim2.new(0, 10, 0, 70)
AimRangeLabel.Size = UDim2.new(0, 180, 0, 20)

local AimbotToggle = Instance.new("TextButton")
AimbotToggle.Name = "AimbotToggle"
AimbotToggle.Parent = AimbotFrame
AimbotToggle.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
AimbotToggle.TextColor3 = Color3.fromRGB(255, 255, 255)
AimbotToggle.Text = "Aimbot: Kapalı"
AimbotToggle.Font = Enum.Font.SourceSans
AimbotToggle.TextSize = 14
AimbotToggle.Position = UDim2.new(0, 10, 0, 100)
AimbotToggle.Size = UDim2.new(0, 180, 0, 20)

AimRangeSlider.Changed:Connect(function()
    AimRangeLabel.Text = "Hedef Aralığı: " .. AimRangeSlider.Value
end)

-- Aimbot Kodu (Örnek)
local function AimAtHead(Target)
    if Target then
        local TargetHead = Target.Character:FindFirstChild("Head")
        if TargetHead then
            local Mouse = game.Players.LocalPlayer:GetMouse()
            Mouse.TargetPoint = TargetHead.Position
            Mouse.TargetFilter = TargetHead
        end
    end
end

-- Hedef Bulma Fonksiyonu (Örnek)
local function FindTarget()
    local ClosestTarget = nil
    local ClosestDistance = math.huge
    for _, Player in pairs(game.Players:GetPlayers()) do
        if Player ~= game.Players.LocalPlayer then
            local TargetCharacter = Player.Character
            if TargetCharacter and TargetCharacter:FindFirstChild("Head") then
                local Distance = (TargetCharacter.Head.Position - game.Players.LocalPlayer.Character.Head.Position).magnitude
                if Distance < ClosestDistance then
                    ClosestTarget = Player
                    ClosestDistance = Distance
                end
            end
        end
    end
    return ClosestTarget
end

-- Aimbot'u etkinleştirmek için bu kodu çalıştırın
AimbotToggle.MouseButton1Click:Connect(function()
    if AimbotToggle.Text == "Aimbot: Açık" then
        while true do
            local Target = FindTarget()
            if Target then
                AimAtHead(Target)
                TargetName.Text = Target.Name
            else
                TargetName.Text = "Hedef Yok"
            end
            wait(0.01)
        end
    else
        TargetName.Text = "Hedef Yok"
    end
end)
