local AimbotEnabled = false
local Target = nil
local Smoothness = 0.1
local AimRange = 650
local Accuracy = 0.9

local function FindTarget()
    local ClosestTarget = nil
    local ClosestDistance = math.huge
    for _, Player in pairs(Players:GetPlayers()) do
        if Player ~= LocalPlayer and Player.Character and Player.Character:FindFirstChild("Head") and Player.Team ~= LocalPlayer.Team then
            local Distance = (Player.Character.Head.Position - LocalPlayer.Character.Head.Position).magnitude
            if Distance < ClosestDistance and Distance <= AimRange then
                ClosestDistance = Distance
                ClosestTarget = Player
            end
        end
    end
    return ClosestTarget
end

local function AimAtHead(Target)
    if Target then
        local Head = Target.Character:FindFirstChild("Head")
        if Head then
            local Mouse = UserInputService:GetMouseLocation()
            local ScreenPoint = Camera:WorldToScreenPoint(Head.Position)
            local DeltaX = ScreenPoint.X - Mouse.X
            local DeltaY = ScreenPoint.Y - Mouse.Y
            local AimX = Mouse.X + DeltaX * Smoothness * Accuracy
            local AimY = Mouse.Y + DeltaY * Smoothness * Accuracy
            UserInputService:SetMouseLocation(AimX, AimY)
        end
    end
end

local function AimbotLoop()
    if AimbotEnabled then
        Target = FindTarget()
        if Target then
            if Target.Character and Target.Character:FindFirstChild("Humanoid") then
                Target.Character.Humanoid.DisplayDistanceType = Enum.HumanoidDisplayDistanceType.None
                Target.Character.Humanoid.HealthDisplayType = Enum.HumanoidHealthDisplayType.None
                Target.Character.Humanoid.Transparency = 0.5
                Target.Character.Humanoid.Color = Color3.new(1, 0, 0) -- Kırmızı renk
            end
            AimAtHead(Target)
        else
            if Target and Target.Character and Target.Character:FindFirstChild("Humanoid") then
                Target.Character.Humanoid.DisplayDistanceType = Enum.HumanoidDisplayDistanceType.Classic
                Target.Character.Humanoid.HealthDisplayType = Enum.HumanoidHealthDisplayType.Classic
                Target.Character.Humanoid.Transparency = 1
                Target.Character.Humanoid.Color = Color3.new(1, 1, 1) -- Normal renk
            end
        end
    end
end

RunService.Heartbeat:Connect(AimbotLoop)

-- UI Oluşturma
local AimbotFrame = Instance.new("Frame")
AimbotFrame.Parent = game.CoreGui
AimbotFrame.Position = UDim2.new(0.5, -100, 0.5, -100)
AimbotFrame.Size = UDim2.new(0, 200, 0, 100)
AimbotFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
AimbotFrame.BorderColor3 = Color3.fromRGB(50, 50, 50)
AimbotFrame.CornerRadius = UDim.new(0, 5)

local AimbotLabel = Instance.new("TextLabel")
AimbotLabel.Parent = AimbotFrame
AimbotLabel.Text = "Aimbot"
AimbotLabel.TextColor3 = Color3.new(1, 1, 1)
AimbotLabel.Size = UDim2.new(0, 100, 0, 20)
AimbotLabel.Position = UDim2.new(0.5, -50, 0, 10)
AimbotLabel.FontSize = Enum.FontSize.Size14
AimbotLabel.Font = Enum.Font.SourceSans
AimbotLabel.TextWrapped = true

local AimbotToggle = Instance.new("TextButton")
AimbotToggle.Parent = AimbotFrame
AimbotToggle.Text = "Etkinleştir"
AimbotToggle.TextColor3 = Color3.new(1, 1, 1)
AimbotToggle.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
AimbotToggle.BorderColor3 = Color3.fromRGB(50, 50, 50)
AimbotToggle.CornerRadius = UDim.new(0, 5)
AimbotToggle.Size = UDim2.new(0, 100, 0, 25)
AimbotToggle.Position = UDim2.new(0.5, -50, 0, 40)
AimbotToggle.Font = Enum.Font.SourceSans
AimbotToggle.FontSize = Enum.FontSize.Size14

AimbotToggle.MouseButton1Click:Connect(function()
    AimbotEnabled = not AimbotEnabled
    if AimbotEnabled then
        AimbotToggle.Text = "Devre Dışı Bırak"
    else
        AimbotToggle.Text = "Etkinleştir"
    end
end)

-- UI'yi daha da özelleştirebilirsin!
