local aimbotEnabled = false
local aimbotTarget = nil
local aimbotFOV = 150
local aimbotSmoothness = 0.01 -- Nişan alma yumuşaklığı (0-1 arası)

function findTarget()
    local closestTarget = nil
    local closestDistance = math.huge

    for _, player in ipairs(game.Players:GetPlayers()) do
        if player ~= game.Players.LocalPlayer and player.Character and player.Character:FindFirstChild("Humanoid") and player.Character:FindFirstChild("Humanoid").Health > 0 then
            local playerHead = player.Character.Head
            local distance = (game.Players.LocalPlayer.Character.Head.Position - playerHead.Position).Magnitude

            if distance < closestDistance and math.deg(math.acos(playerHead.CFrame.LookVector:Dot(game.Players.LocalPlayer.Character.Head.CFrame.LookVector))) < aimbotFOV then
                closestTarget = playerHead
                closestDistance = distance
            end
        end
    end

    return closestTarget
end

function aimAtTarget()
    if aimbotTarget then
        game.Players.LocalPlayer.Character.Head.CFrame = CFrame.new(aimbotTarget.Position)
    end
end

game:GetService("RunService").Heartbeat:Connect(function()
    if aimbotEnabled then
        aimbotTarget = findTarget()
        if aimbotTarget then
            aimAtTarget()
        end
    end
end)

game:GetService("UserInputService").InputBegan:Connect(function(inputObject, gameProcessedEvent)
    if inputObject.KeyCode == Enum.KeyCode.F then
        aimbotEnabled = not aimbotEnabled
    end
end)

local aimbotUI = Instance.new("ScreenGui")
aimbotUI.Name = "AimbotUI"
aimbotUI.Parent = game.CoreGui

local aimbotFrame = Instance.new("Frame")
aimbotFrame.Name = "AimbotFrame"
aimbotFrame.Parent = aimbotUI
aimbotFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
aimbotFrame.Size = UDim2.new(0, 100, 0, 50)
aimbotFrame.Position = UDim2.new(0.5, -50, 0, 0)
aimbotFrame.Draggable = true
aimbotFrame.Active = true

local aimbotButton = Instance.new("TextButton")
aimbotButton.Name = "AimbotButton"
aimbotButton.Parent = aimbotFrame
aimbotButton.Text = "Aimbot"
aimbotButton.Size = UDim2.new(0, 80, 0, 30)
aimbotButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
aimbotButton.TextColor3 = Color3.fromRGB(255, 255, 255)
aimbotButton.Position = UDim2.new(0.5, -40, 0.1, 0)

aimbotButton.MouseButton1Click:Connect(function()
    aimbotEnabled = not aimbotEnabled
    if aimbotEnabled then
        aimbotButton.Text = "Aimbot (Açık)"
    else
        aimbotButton.Text = "Aimbot"
    end
end)

local baranBeyLabel = Instance.new("TextLabel")
baranBeyLabel.Name = "BaranBeyLabel"
baranBeyLabel.Parent = aimbotFrame
baranBeyLabel.Text = "BaranBey"
baranBeyLabel.Size = UDim2.new(0, 50, 0, 15)
baranBeyLabel.Position = UDim2.new(0, 5, 0.8, 0)
baranBeyLabel.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
baranBeyLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
baranBeyLabel.FontSize = Enum.FontSize.Size10
