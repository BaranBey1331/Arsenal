-- Değişkenler
local AimRange = 100 -- Hedefleme mesafesi
local AimSpeed = 0.1 -- Hedefleme hızı
local Smoothness = 0.5 -- Hedefleme yumuşaklığı
local Accuracy = 0.8 -- Hedefleme doğruluğu
local Target = nil -- Hedef oyuncusu

-- UI
local AimbotFrame = Instance.new("Frame")
AimbotFrame.Parent = game.CoreGui
AimbotFrame.Position = UDim2.new(0.5, -100, 0.1, -100)
AimbotFrame.Size = UDim2.new(0, 250, 0, 150)
AimbotFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
AimbotFrame.BorderColor3 = Color3.fromRGB(50, 50, 50)
AimbotFrame.CornerRadius = UDim.new(0, 10)
AimbotFrame.Draggable = true

-- Hedefi bulma
local function FindTarget()
    local ClosestTarget = nil
    local ClosestDistance = math.huge
    for _, Player in pairs(game.Players:GetPlayers()) do
        if Player ~= game.Players.LocalPlayer and Player.Character and Player.Character:FindFirstChild("Head") then
            local Distance = (Player.Character.Head.Position - game.Players.LocalPlayer.Character.Head.Position).magnitude
            if Distance < ClosestDistance and Distance <= AimRange then
                ClosestDistance = Distance
                ClosestTarget = Player
            end
        end
    end
    return ClosestTarget
end

-- Hedefi hedefleme
local function AimAtHead(Target)
    if Target then
        local Head = Target.Character:FindFirstChild("Head")
        if Head then
            local Mouse = game.UserInputService:GetMouseLocation()
            local ScreenPoint = game.Workspace.CurrentCamera:WorldToScreenPoint(Head.Position)
            if ScreenPoint.Z > 0 then
                local DeltaX = ScreenPoint.X - Mouse.X
                local DeltaY = ScreenPoint.Y - Mouse.Y
                local AimX = Mouse.X + DeltaX * Smoothness * Accuracy * AimSpeed
                local AimY = Mouse.Y + DeltaY * Smoothness * Accuracy * AimSpeed
                game.UserInputService:SetMouseLocation(AimX, AimY)
            end
        end
    end
end

-- Hedefi güncelleme
local function UpdateTarget(Target)
    if Target then
        if Target.Character and Target.Character:FindFirstChild("Humanoid") then
            Target.Character.Humanoid.DisplayDistanceType = Enum.HumanoidDisplayDistanceType.None
            Target.Character.Humanoid.HealthDisplayType = Enum.HumanoidHealthDisplayType.None
            Target.Character.Humanoid.Transparency = 0.5
            Target.Character.Humanoid.Color = Color3.new(1, 0, 0)
        end
    end
end

-- Hedefi temizleme
local function ClearTarget(Target)
    if Target then
        if Target.Character and Target.Character:FindFirstChild("Humanoid") then
            Target.Character.Humanoid.DisplayDistanceType = Enum.HumanoidDisplayDistanceType.Classic
            Target.Character.Humanoid.HealthDisplayType = Enum.HumanoidHealthDisplayType.Classic
            Target.Character.Humanoid.Transparency = 1
            Target.Character.Humanoid.Color = Color3.new(1, 1, 1)
        end
    end
end

-- Döngü
while true do
    Target = FindTarget()
    if Target then
        UpdateTarget(Target)
        AimAtHead(Target)
    else
        ClearTarget(Target)
    end
    wait(0.01)
end
